class Player {
  late String _playerName;
  late int _average;
  late int _team;

  Player({playerName, average, team});

  getData(String playerName, average, team) {
    this._playerName = playerName;
    this._average = average;
    this._team = team;
  }

  void set player_name(String nm) {
    this._playerName = _playerName;
  }

  String get player_name {
    return _playerName;
  }

  void set player_average(String aver) {
    this._average = _average;
  }

  int get aver {
    return _average;
  }

  void set player_team(String tm) {
    this._team = _team;
  }

  int get tm {
    return _team;
  }

  ChangeData(String playerName, average, team) {
    this._playerName = playerName;
    this._average = average;
    this._team = team;
  }

  void showData() {
    print("PlayerName : $_playerName");
    print("Average : $_average");
    print("Team : $_team");
  }
}
