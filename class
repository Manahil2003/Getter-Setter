class Player {
  String _name;
  int _average;
  String _team;

  Player(this._name, this._average, this._team);

  void set name(String _name) {
    this._name = _name;
  }

  String get name {
    return _name;
  }

  void set average(int _average) {
    this._average = _average;
  }

  int get average {
    return _average;
  }

  void set team(String _team) {
    this._team = _team;
  }

  String get team {
    return _team;
  }

  void change(String _name, double _average, String _team) {
    this._name = _name;
    this._average = average;
    this._team = _team;
  }

  void showData() {
    print("PlayerName : $_name");
    print("Average : $_average");
    print("Team : $_team");
  }
}
